<%= form_for :hello do %>

	<div class="container">

		<div class="row col-lg-offset-4 col-lg-4 form-group">
			<input name="hello[username]" type="text" class="form-control input-lg" placeholder="Your name">
		</div>

		<div class="row col-lg-offset-4 col-lg-4 form-group">
			<button type="submit" class="btn btn-primary btn-block btn-lg">Say Greetings!</button>
		</div>

		<div class="row col-lg-offset-4 col-lg-4 form-group">
			<b><p><%=@str %></p></b>
		</div>
	
	</div>

<% end %>